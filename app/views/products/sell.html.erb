<h1>出品画面</h1>

<div>
    <%= form_with(url: "/products/create", model: @products, local: true) do |form| %>
        <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name %>
        </div>

        <div class="field">
        <%= form.label :price %>
        <%= form.number_field :price %>
        </div>

        <div class="actions">
        <%= form.submit "商品を出品する" %>
        </div>
    <% end %>
</div>