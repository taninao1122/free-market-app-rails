<h1>ログイン画面</h1>
<div>
    <%= form_with(url: "/login/create", model: @user, local: true) do |form| %>
        <div class="field">
            <%= form.label :email %><br />
            <%= form.email_field :email , autofocus: true %>
        </div>

        <div class="field">
            <%= form.label :password %><br />
            <%= form.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
            <%= form.submit "ログイン" %>
        </div>
    <% end %>
</div>