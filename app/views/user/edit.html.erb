<h1>ユーザ編集</h1>
<div>
    <%= form_with(url: "/profile/#{@user.id}/update", model: @profile, local: true) do |form| %>
        <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, value: @user.name %>
        </div>

        <div class="field">
            <%= form.label :image %>
            <%= form.file_field :image %>
        </div>

        <div class="actions">
            <%= form.submit "完了" %>
        </div>
    <% end %>
</div>